{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "paths": { "i18next-browser-languagedetector": ["./index.d.mts"] }
  },
  "include": ["./indext.d.mts", "./test/**/*.ts*"],
  "exclude": ["test/typescript/nonEsModuleInterop/**/*.ts"]
}
